<div class='row mt-5'>
  <div class='col-sm-12'>
    <h1 class='display-4'>Details</h1>
  </div>
</div>

<div class='row mt-2'>
  <div class='col-sm-12 col-lg-8'>
    <div class="card">
      <div class="card-header">Location Information</div>
      <div class="card-body">
        <h5 class='card-title'><u>Address</u></h5>
        <h6 class='card-text'>{{listing.street}}</h6>
        <h6 class='card-text'>{{listing.city}}, {{listing.state}} {{listing.zip}}</h6>
        <p class='card-text mt-2 mb-1'><strong><u>Details</u></strong></p>
        <p class='card-text'>{{listing.description}}</p>
        <p class='card-text mt-2 mb-1'><strong><u>Contact Information</u></strong></p>
        <p class='card-text'><i class="fas fa-at"></i> {{listing.email}} <i class="fas fa-phone"></i> {{listing.phone}}
        </p>
      </div>
    </div>
  </div>
  <div class='col-sm-12 col-lg-4'>
    <div class='card'>
      <div class='card-header'>Hopefully Map goes here...</div>
    </div>
  </div>
</div>

<div class='row mt-5'>
  <div class='col-sm-12'>
    <a href='/search' class='btn btn-danger btn-outline'>Back to Listings</a>
  </div>
</div>

